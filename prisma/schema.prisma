generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ---------- KÃ©yants du projet ----------

model Utilisateur {
  id          Int          @id @default(autoincrement())
  nom         String
  email       String       @unique
  motDePasse  String
  totalPoints Int          @default(0)
  points      Points[]
  recompenses Recompense[]
  microcours  Microcours[]
}

model Points {
  id            Int          @id @default(autoincrement())
  value         Int
  utilisateur   Utilisateur? @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int?
}

model Recompense {
  id            Int          @id @default(autoincrement())
  name          String
  pointsRequired Int
  utilisateur   Utilisateur? @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int?
}

model Microcours {
  id            Int          @id @default(autoincrement())
  title         String
  type          String       // "creation" ou "apprentissage"
  utilisateur   Utilisateur? @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int?
}
