generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


/// UTILISATEURS
model utilisateur {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?  @unique
  motDePasse     String?
  totalDesPoints Int      @default(0)
  createdAt      DateTime @default(now())

  microcours      microCours[]
  apprentissage   utilisateurMicrocours[]
  historique      historiqueRecompense[]
  utilisationCode utilisationCode[]
}


/// MICRO COURS
model microCours {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titre       String
  description String?
  createurId  String   @db.ObjectId
  createdAt   DateTime @default(now())

  createur    utilisateur @relation(fields: [createurId], references: [id])
  apprentissage utilisateurMicrocours[]

  code          Code?   // ✅ بدون fields / references
}


/// PIVOT utilisateur <-> microCours
model utilisateurMicrocours {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  utilisateurId String @db.ObjectId
  microcoursId  String @db.ObjectId

  utilisateur utilisateur @relation(fields: [utilisateurId], references: [id])
  microcours  microCours  @relation(fields: [microcoursId], references: [id])
}


/// CODE
model Code {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  valeur          String   @unique
  maxUtilisations Int      @default(10)
  utilisations    Int      @default(0)
  microcoursId    String   @unique @db.ObjectId

  microcours      microCours @relation(fields: [microcoursId], references: [id])
  utilisationsCode utilisationCode[]
}


/// UTILISATION CODE
model utilisationCode {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  utilisateurId String   @db.ObjectId
  codeId        String   @db.ObjectId
  date          DateTime @default(now())

  utilisateur utilisateur @relation(fields: [utilisateurId], references: [id])
  code        Code        @relation(fields: [codeId], references: [id])
}


/// RECOMPENSE
model Recompense {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  nom                String
  description        String?
  points_requis      Int
  quantiteDisponible Int?

  historique historiqueRecompense[]
}


/// HISTORIQUE RECOMPENSE
model historiqueRecompense {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  utilisateurId String?  @db.ObjectId
  recompenseId  String   @db.ObjectId
  date          DateTime @default(now())

  utilisateur utilisateur? @relation(fields: [utilisateurId], references: [id])
  recompense  Recompense   @relation(fields: [recompenseId], references: [id])
}
