generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// ------------ MODELS ------------


// UTILISATEURS
model utilisateur {
  id             Int      @id @default(autoincrement())
  name           String?
  email          String?  @unique
  motDePasse     String?
  totalDesPoints Int      @default(0)
  createdAt      DateTime @default(now())

  // Relations
  microcours           microCours[]            @relation("UserCreatedCourses")
  apprentissage        utilisateurMicrocours[]
  historiqueRecompense historiqueRecompense[]
  utilisationCodes     utilisationCode[]
}

// MicroCours
model microCours {
  id          Int      @id @default(autoincrement())
  titre       String
  description String?
  createurId  Int
  createdAt   DateTime @default(now())

  createur      utilisateur             @relation("UserCreatedCourses", fields: [createurId], references: [id])
  apprentissage utilisateurMicrocours[]

  code          Code?   // ✅ بدون fields / references
}

// Table pivot utilisateur <-> microcours
model utilisateurMicrocours {
  id            Int @id @default(autoincrement())
  utilisateurId Int
  microcoursId  Int

  utilisateur utilisateur @relation(fields: [utilisateurId], references: [id])
  microcours  microCours  @relation(fields: [microcoursId], references: [id])
}

// Code pour microcours
model Code {
  id               Int      @id @default(autoincrement())
  valeur           String   @unique
  maxUtilisations  Int      @default(10)
  utilisations     Int      @default(0)
  microcoursId     Int      @unique

  microcours       microCours @relation(fields: [microcoursId], references: [id])
  utilisationsCode utilisationCode[]
}

// Utilisation du code
model utilisationCode {
  id            Int      @id @default(autoincrement())
  utilisateurId Int
  codeId        Int
  date          DateTime @default(now())

  utilisateur utilisateur @relation(fields: [utilisateurId], references: [id])
  code        Code        @relation(fields: [codeId], references: [id])
}

// Recompense
model Recompense {
  id                Int      @id @default(autoincrement())
  nom               String
  description       String?
  points_requis     Int
  quantiteDisponible Int?

  historique historiqueRecompense[]
}

// Historique Recompense
model historiqueRecompense {
  id            Int @id @default(autoincrement())
  utilisateurId Int?
  recompenseId  Int
  date          DateTime @default(now())

  utilisateur utilisateur? @relation(fields: [utilisateurId], references: [id])
  recompense  Recompense   @relation(fields: [recompenseId], references: [id])
}

